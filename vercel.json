{
  "version": 2,
  "name": "autorder-system",
  "functions": {
    "server.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 300
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 